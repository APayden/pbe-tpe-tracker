<% content_for :title, 'TPE by Team' %>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />

<%= render 'shared/navigation' %>
<div class="container">
  <h1>Team Totals</h1>

  <table class="table table-striped table-bordered table-sm" cellspacing="0" id="tpeTable">
    <thead>
    <tr>
      <th scope="col" data-sortable="true">League</th>
      <th scope="col" data-sortable="true">Team</th>
      <th scope="col" data-sortable="true">TPE</th>
    </tr>
    </thead>
    <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= league_name(team) %></td>
        <td><%= link_to team.name, team_path(team) %></td>
        <td><%= team.total_tpe %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


